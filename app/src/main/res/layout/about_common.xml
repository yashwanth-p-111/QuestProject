<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/abtHeader"
                style="@style/headers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/padding"
                android:text="@string/about_quest"
                android:textColor="#150260" />

            <RelativeLayout
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/abtHeader"
                android:background="@drawable/bg_rounds"
                android:clickable="true"
                android:gravity="bottom|right"
                android:padding="3dp"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/imgText"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@drawable/quest"></TextView>

            </RelativeLayout>

            <TextView
                android:id="@+id/desc"
                style="@style/headers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:padding="@dimen/padding"
                android:text="OverView"
                android:textColor="#120c45"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/abtDesc"
                style="@style/texts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:padding="@dimen/padding"
                android:text="@string/qdescription"
                android:textColor="#19434d" />



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>